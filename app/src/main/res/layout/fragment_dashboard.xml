<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="#boycotter"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/victory_drawable"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_medal"
    android:layout_marginTop="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/victory_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Victory!"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/victory_drawable"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/boycotter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/boycotter"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/victory_text"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/boycotter_long_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="@string/text_boycott"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boycotter_txt"/>

    <View
        android:id="@+id/victory_horizontal_view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boycotter_long_txt"
        style="@style/Divider.Horizontal"/>

    <View
        android:id="@+id/victory_vertical_view"
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:layout_marginTop="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/victory_horizontal_view"
        style="@style/Divider.Vertical"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/victory_score_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="@+id/victory_vertical_view"
        app:layout_constraintTop_toBottomOf="@+id/victory_horizontal_view"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/victory_uninstall_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App uninstall count"
        android:layout_marginStart="32dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="@+id/victory_vertical_view"
        app:layout_constraintTop_toBottomOf="@+id/victory_score_txt"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/victory_uninstall_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="51dp"
        app:layout_constraintEnd_toEndOf="@+id/victory_vertical_view"
        app:layout_constraintTop_toBottomOf="@+id/victory_horizontal_view"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/victory_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:layout_marginEnd="48dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="@+id/victory_vertical_view"
        app:layout_constraintTop_toBottomOf="@+id/victory_score_txt"/>

</androidx.constraintlayout.widget.ConstraintLayout>