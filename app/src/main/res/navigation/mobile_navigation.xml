<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.japps.boycotter.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_navigation_home_to_uninstaller2"
            app:destination="@id/uninstaller"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.japps.boycotter.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.japps.boycotter.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/uninstaller"
        android:name="com.japps.boycotter.Uninstaller"
        android:label="fragment_uninstaller"
        tools:layout="@layout/fragment_uninstaller" >
        <argument
            android:name="packages"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="appToUninstall"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>

    </fragment>
    <fragment
        android:id="@+id/nointernet"
        android:name="com.japps.boycotter.Nointernet"
        android:label="fragment_nointernet"
        tools:layout="@layout/fragment_nointernet" />

</navigation>